<div class="modal micromodal-slide" id="modal-<%= file.id %>" aria-hidden="true">
  <div class="modal__overlay" tabindex="-1" data-micromodal-close>
    <div
      class="modal__container"
      role="dialog"
      aria-modal="true"
      aria-labelledby="modal-<%= file.id %>-title"
    >
      <header class="modal__header">
        <h2 class="modal__title" id="modal-<%= file.id %>-title">Change File Location</h2>
        <button
          class="modal__close"
          aria-label="Close modal"
          data-micromodal-close
        ></button>
      </header>

      <main class="modal__content" id="modal-<%= file.id %>-content">
        <form action="/files/<%= file.id %>/updatefolder" method="POST">
          <div>
            <label for="folder">Folder: </label>
            <select name="folder" id="folder">
              <option value="" selected>-- No folder --</option>
              <% folders.forEach((folder) => { %>
              <option value="<%= folder.id %>"><%= folder.name %></option>
              <%}); %>
            </select>
          </div>
          <div class="form_btns">
            <button class="modal__btn upload__btn" type="submit">
              Change Folder
            </button>
            <button
              class="modal__btn"
              data-micromodal-close
              aria-label="Close this dialog window"
            >
              Close
            </button>
          </div>
        </form>
      </main>
    </div>
  </div>
</div>
